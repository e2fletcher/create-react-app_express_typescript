  "scripts": {
    "dev": "concurrently \"node  scripts/start.js\" \"tsc -w -p src/server\"  \"nodemon dist/index.js\"",
    "server": "concurrently \"tsc -w -p src/server\"  \"nodemon dist/index.js\"",
    "start": "node scripts/start.js",
    "build": "concurrently \"node scripts/build.js\" \"tsc -p src/server\"",
    "test": "node scripts/test.js --env=jsdom"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/sequelize": "^4.27.14",
